<div class="selectButton" @onclick="@(e => SelectBuilding(Building.Id))">
    <p>@Building.Name (@Building.NumberBuilt)</p>
</div>

@code {
    [Inject] protected GameEngine Engine { get; set; } = default!;
    [Parameter] public required Building Building { get; set; }

    private void SelectBuilding(BuildingId buildingId)
    {
        Engine.State.SelectedBuilding = Engine.State.Buildings.Single(b => b.Id == buildingId);
    }
}
