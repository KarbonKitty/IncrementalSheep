@using IncrementalSheep.Components.Buttons

@foreach (var idea in Ideas.Where(i => !i.IsLocked && !i.IsBought))
{
    <IdeaButton Idea=@idea />
}
@foreach (var idea in Ideas.Where(i => !i.IsLocked && i.IsBought))
{
    <IdeaButton Idea=@idea />
}

@code {
    [Parameter] public required List<Idea> Ideas { get; set; }
}
