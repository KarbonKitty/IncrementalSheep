<h2>@(Building?.Name ?? "Please select a building")</h2>

<p>@Building?.Description</p>

@if (Building is not null) {
    <p><strong>Price:</strong></p>
    <ul>
    @foreach (var resource in Building.Price.AllResources)
    {
        <li>@resource.Key: @resource.Value.FormatAsMoney()</li>
    }
    </ul>
}

<button class="btn" @onclick="Buy">Buy</button>

@code {
    [Inject] public GameEngine Engine { get; set; }

    [Parameter] public Building? Building { get; set; }

    private void Buy(object? sender)
    {
        if (Building is not null)
        {
            Engine.TryBuy(Building);
        }
    }
}
